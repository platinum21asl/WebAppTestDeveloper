@{
    ViewData["Title"] = "Home Page";
    ViewData["SubTitle"] = "Sales Order";
}
<body>
    <div class="container">
        <div class="card bg-light mb-4" style="background-color: #b3d1f7;">
            <div class="card-body" style="background-color: #b3d1f7;">
                <div class="row g-3">
                    <div class="col-md-5">
                        <label for="keywords" class="form-label">Keywords</label>
                        <input type="text" class="form-control" id="keywords" placeholder="Insert Text">
                    </div>
                    <div class="col-md-5">
                        <label for="orderDate" class="form-label">Order Date</label>
                        <input type="date" class="form-control" id="orderDate">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="mb-3 d-flex justify-content-between">
            <div>
                <a class="btn btn-danger me-2" asp-controller="Home" asp-action="Index">Add New Data</a>
                <button class="btn btn-success">Export To Excel</button>
            </div>
            <button class="btn btn-warning">Hint</button>
        </div>

        <!-- Data Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="header-background text-white">
                    <tr>
                        <th>No</th>
                        <th>Action</th>
                        <th>Sales Order</th>
                        <th>Order Date</th>
                        <th>Customer</th>
                    </tr>
                </thead>
                <tbody style="background-color: white;">
                    @for (int i = 1; i <= 4; i++)
                    {
                        <tr>
                            <td>@i</td>
                            <td>
                                <a href="#" class="text-primary me-2"><i class="bi bi-pencil-square"></i></a>
                                <a href="#" class="text-danger"><i class="bi bi-trash"></i></a>
                            </td>
                            <td>@($"50_00{i}")</td>
                            <td>@($"24/2/2011")</td>
                            <td>@(i % 2 == 0 ? "TITAN" : "PROFES")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">&laquo;</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">&raquo;</a>
                </li>
            </ul>
        </nav>
    </div>

    @section Scripts {
        <script>
            // Tambahkan JavaScript tambahan jika diperlukan
        </script>
    }
</body>

